      </equation>
      <equation id="uid27">
        <m:math overflow="scroll" mode="display">
          <m:mrow>
            <m:msub>
              <m:mover accent="true">
                <m:mi>d</m:mi>
                <m:mo>˜</m:mo>
              </m:mover>
              <m:mi>j</m:mi>
            </m:msub>
            <m:mrow>
              <m:mo>(</m:mo>
              <m:mi>k</m:mi>
              <m:mo>)</m:mo>
            </m:mrow>
            <m:mo>=</m:mo>
            <m:msubsup>
              <m:mo>∫</m:mo>
              <m:mn>0</m:mn>
              <m:mi>P</m:mi>
            </m:msubsup>
            <m:mi>f</m:mi>
            <m:mrow>
