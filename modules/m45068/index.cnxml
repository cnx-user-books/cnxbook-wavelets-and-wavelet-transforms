                </m:mtable>
              </m:mfenced>
              <m:mfenced separators="" open="{" close="}">
                <m:munderover>
                  <m:mo>∏</m:mo>
                  <m:mrow>
                    <m:mi>i</m:mi>
                    <m:mo>=</m:mo>
                    <m:mn>1</m:mn>
                  </m:mrow>
                  <m:mi>K</m:mi>
                </m:munderover>
