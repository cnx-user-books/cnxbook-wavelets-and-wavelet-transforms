                        <m:mi>p</m:mi>
                        <m:mi>j</m:mi>
                      </m:msubsup>
                      <m:mrow>
                        <m:mo>(</m:mo>
                        <m:mn>0</m:mn>
                        <m:mo>)</m:mo>
                      </m:mrow>
