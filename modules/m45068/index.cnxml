        <item id="uid274">
          <label>PCS Symmetry</label>
          <equation id="uid275">
            <m:math overflow="scroll" mode="display">
              <m:mrow>
                <m:mfenced separators="" open="[" close="]">
                  <m:mtable>
                    <m:mtr>
                      <m:mtd>
                        <m:mrow>
                          <m:msub>
                            <m:mi>W</m:mi>
                            <m:mn>0</m:mn>
                          </m:msub>
                          <m:mrow>
                            <m:mo>(</m:mo>
                            <m:mi>z</m:mi>
                            <m:mo>)</m:mo>
                          </m:mrow>
                        </m:mrow>
                      </m:mtd>
                      <m:mtd>
                        <m:mrow>
                          <m:msub>
                            <m:mi>W</m:mi>
                            <m:mn>1</m:mn>
                          </m:msub>
                          <m:mrow>
                            <m:mo>(</m:mo>
                            <m:mi>z</m:mi>
                            <m:mo>)</m:mo>
                          </m:mrow>
                          <m:mi>J</m:mi>
                        </m:mrow>
                      </m:mtd>
                    </m:mtr>
                    <m:mtr>
                      <m:mtd>
                        <m:mrow>
                          <m:mi>J</m:mi>
                          <m:msubsup>
                            <m:mi>W</m:mi>
                            <m:mn>1</m:mn>
                            <m:mi>R</m:mi>
                          </m:msubsup>
                          <m:mrow>
                            <m:mo>(</m:mo>
                            <m:mi>z</m:mi>
                            <m:mo>)</m:mo>
                          </m:mrow>
                          <m:mi>V</m:mi>
                        </m:mrow>
                      </m:mtd>
                      <m:mtd>
                        <m:mrow>
