                              <m:mn>1</m:mn>
                            </m:mrow>
                          </m:msup>
                          <m:msub>
                            <m:mi>B</m:mi>
                            <m:mi>i</m:mi>
                          </m:msub>
                        </m:mrow>
                      </m:mtd>
                    </m:mtr>
                    <m:mtr>
                      <m:mtd>
                        <m:mrow>
                          <m:mo>-</m:mo>
                          <m:msub>
                            <m:mi>B</m:mi>
                            <m:mi>i</m:mi>
                          </m:msub>
                        </m:mrow>
                      </m:mtd>
                      <m:mtd>
                        <m:mrow>
                          <m:msup>
                            <m:mi>z</m:mi>
                            <m:mrow>
                              <m:mo>-</m:mo>
                              <m:mn>1</m:mn>
                            </m:mrow>
                          </m:msup>
                          <m:msub>
                            <m:mi>A</m:mi>
                            <m:mi>i</m:mi>
                          </m:msub>
                        </m:mrow>
                      </m:mtd>
