                        <m:mo>)</m:mo>
                      </m:mrow>
                    </m:mrow>
                  </m:mtd>
                  <m:mtd>
                    <m:mrow>
                      <m:msubsup>
                        <m:mi>Y</m:mi>
                        <m:mn>0</m:mn>
                        <m:mi>R</m:mi>
                      </m:msubsup>
