    <para id="id324594"><emphasis effect="italics">Separating <link target-id="uid46"/> into even and odd indices gives</emphasis></para><equation id="uid47">
      <m:math overflow="scroll" mode="display">
        <m:mrow>
          <m:munder>
            <m:mo>∑</m:mo>
            <m:mi>m</m:mi>
          </m:munder>
          <m:msub>
            <m:mi>h</m:mi>
            <m:mn>1</m:mn>
          </m:msub>
          <m:mrow>
            <m:mo>(</m:mo>
            <m:mn>2</m:mn>
            <m:mi>m</m:mi>
            <m:mo>)</m:mo>
          </m:mrow>
          <m:mspace width="0.166667em"/>
          <m:mi>h</m:mi>
          <m:mrow>
            <m:mo>(</m:mo>
            <m:mn>2</m:mn>
            <m:mi>m</m:mi>
            <m:mo>-</m:mo>
            <m:mn>2</m:mn>
            <m:mi>k</m:mi>
            <m:mo>)</m:mo>
          </m:mrow>
          <m:mo>+</m:mo>
          <m:munder>
            <m:mo>∑</m:mo>
