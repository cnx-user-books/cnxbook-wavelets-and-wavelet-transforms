    </equation>
    <equation id="uid50">
      <m:math overflow="scroll" mode="display">
        <m:mrow>
          <m:msub>
            <m:mi>h</m:mi>
            <m:mrow>
              <m:mn>1</m:mn>
              <m:mi>e</m:mi>
            </m:mrow>
          </m:msub>
          <m:mo>☆</m:mo>
          <m:msub>
            <m:mover accent="true">
              <m:mi>h</m:mi>
              <m:mo>˜</m:mo>
            </m:mover>
            <m:mrow>
              <m:mn>1</m:mn>
              <m:mi>e</m:mi>
            </m:mrow>
          </m:msub>
          <m:mo>+</m:mo>
          <m:msub>
