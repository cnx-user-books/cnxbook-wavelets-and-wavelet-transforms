              <m:mi>ℓ</m:mi>
            </m:mrow>
          </m:munder>
          <m:msub>
            <m:mi>h</m:mi>
            <m:mn>1</m:mn>
          </m:msub>
          <m:mrow>
            <m:mo>(</m:mo>
            <m:mi>n</m:mi>
            <m:mo>)</m:mo>
          </m:mrow>
          <m:mspace width="0.166667em"/>
          <m:mi>h</m:mi>
          <m:mrow>
            <m:mo>(</m:mo>
