          </m:mrow>
          <m:mspace width="0.166667em"/>
          <m:mi>φ</m:mi>
          <m:mrow>
            <m:mo>(</m:mo>
            <m:mi>y</m:mi>
            <m:mo>-</m:mo>
            <m:mn>2</m:mn>
            <m:mi>k</m:mi>
            <m:mo>-</m:mo>
            <m:mi>ℓ</m:mi>
            <m:mo>)</m:mo>
          </m:mrow>
          <m:mspace width="0.166667em"/>
