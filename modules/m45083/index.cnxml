          </m:munder>
          <m:msub>
            <m:mi>h</m:mi>
            <m:mn>1</m:mn>
          </m:msub>
          <m:mrow>
            <m:mo>(</m:mo>
            <m:mn>2</m:mn>
            <m:mi>ℓ</m:mi>
            <m:mo>+</m:mo>
            <m:mn>1</m:mn>
            <m:mo>)</m:mo>
          </m:mrow>
          <m:mspace width="0.166667em"/>
          <m:mi>h</m:mi>
          <m:mrow>
            <m:mo>(</m:mo>
            <m:mn>2</m:mn>
            <m:mi>ℓ</m:mi>
            <m:mo>+</m:mo>
            <m:mn>1</m:mn>
            <m:mo>-</m:mo>
            <m:mn>2</m:mn>
            <m:mi>k</m:mi>
            <m:mo>)</m:mo>
